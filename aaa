# change permissions for tomcat
directory '/opt/tomcat' do
  group 'tomcat'
  recursive True
  action :create
end

directory '/opt/tomcat/conf' do
  mode '750'
  recursive true
  action :create
end

%w( /opt/tomcat/webapps /opt/tomcat/work /opt/tomcat/temp /opt/tomcat/logs).each do |path|
  directory path do
    owner 'tomcat'
  end
end

